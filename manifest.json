{
  "manifest_version": 3,
  "name": "Smart Tab Organizer",
  "version": "1.0",
  "description": "Organizes your tabs by category, removes duplicates, and shows counts.",
  "permissions": [
    "tabs",
    "tabGroups",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Smart Tab Organizer"
  },
  "background": {
    "service_worker": "popup.js"
  }
}
